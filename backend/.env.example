# RedTrack Backend Configuration
# Run the server without a .env file to start the interactive setup wizard.
# Or copy this file to .env and fill in the values manually.

# MongoDB connection string (required)
mongodb_uri=mongodb://localhost:27017

# Port for the backend API server (default: 3001)
backend_port=3001

# Development mode (default: false)
dev=false

# How often to ping servers, in milliseconds (default: 3000)
ping_rate=3000

# HTTPS Configuration (optional)
# backend_https_enabled=true
# backend_https_key_path=/path/to/privkey.pem
# backend_https_cert_path=/path/to/cert.pem
